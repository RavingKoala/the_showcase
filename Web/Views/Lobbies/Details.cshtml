@model LobbyDetails

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lobby</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Player1Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player1Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Player2Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player2Name)
        </dd>
    </dl>
</div>
<div>
    @if (Model.isHost) {
        <form asp-action="StartGame" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input class="btn btn-primary" type="submit" value="Start" />
        </form>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input class="btn btn-danger" type="submit" value="Leave" />
        </form>
    } else {
        <p>Waiting for host to start game...</p>
        <form asp-action="Leave" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input class="btn btn-danger" type="submit" value="Leave" />
        </form>
    }
</div>
