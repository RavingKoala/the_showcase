@{
    ViewData["Title"] = "Contact";
}

@model Web.Models.EmailModel

<section class="contact">
    <h1>@ViewData["Title"]</h1>

    <form method="post" class="form-contactpagina" asp-controller="Contact" asp-action="SendMail">
        @if (ViewBag.SubmitSuccess != null) {
            @if (ViewBag.SubmitSuccess) {
                <p class="success-text">
                    Mail is verzonden
                </p>
            } else {
                <p class="fail-text">
                    Er is iets fout gegaan, probeel later opnieuw!
                </p>
            }
        }
        <div class="form-contactpagina__inputelement fx-col">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName"/>
        </div>

        <div class="form-contactpagina__inputelement fx-col">
            @Html.LabelFor(m => m.LastName)
            <input asp-for="@Model.LastName"/>
        </div>

        <div class="form-contactpagina__inputelement fx-col">
            @Html.LabelFor(m => m.Email)
            <input asp-for="@Model.Email"/>
        </div>

        <div class="form-contactpagina__inputelement fx-col">
            @Html.LabelFor(m => m.Subject)
            <input asp-for="@Model.Subject"/>
        </div>

        <div class="form-contactpagina__inputelement fx-col">
            @Html.LabelFor(m => m.Message)
            <input asp-for="@Model.Message"/>
        </div>

        <div class="form-contactpagina__inputelement resizable_y">
            <input type="submit" value="Verstuur!">
        </div>

    </form>

</section>